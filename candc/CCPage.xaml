<Page x:Class="CC.CCPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CCPage"
      Loaded="Page_Loaded">

    <Grid>
        <Label Name="PageNameLabel" FontSize="16" FontWeight="Bold" Content="Page Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Array" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Antigen Group" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Antigen" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top"/>
        <Label Content="Serum Ref." HorizontalAlignment="Left" Margin="10,151,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Dilution Factor" HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top"/>
        <Label Content="Dilution Date" HorizontalAlignment="Left" Margin="10,213,0,0" VerticalAlignment="Top"/>
        <Label Content="Expiration" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top"/>
        <Label Content="Min" HorizontalAlignment="Left" Margin="10,275,0,0" VerticalAlignment="Top"/>
        <Label Content="Lot Number" HorizontalAlignment="Left" Margin="10,337,0,0" VerticalAlignment="Top"/>
        <Label Content="Qty Labels to Print" HorizontalAlignment="Left" Margin="10,368,0,0" VerticalAlignment="Top"/>
        <ListBox Name="ArrayListbx" Selected="ArrayListbx_Selected" HorizontalAlignment="Left" Height="23" Margin="123,60,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox Name="GroupListbx" Selected="GroupListbx_Selected" HorizontalAlignment="Left" Height="23" Margin="123,91,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox Name="AntigenListbx" Selected="AntigenListbx_Selected" HorizontalAlignment="Left" Height="23" Margin="123,122,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="SerumTextBox" HorizontalAlignment="Left" Height="23" Margin="123,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="DilutionFactorTextBox" LostFocus="DilutionFactorTextBox_LostFocus" HorizontalAlignment="Left" Height="23" Margin="123,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <DatePicker Name="DilutionDatePicker" HorizontalAlignment="Left" Margin="123,214,0,0" VerticalAlignment="Top"/>
        <TextBox Name="ExpirationDateTextBox" HorizontalAlignment="Left" Height="23" Margin="125,244,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="MinTextBox" HorizontalAlignment="Left" Height="23" Margin="123,277,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <Label Content="Max" HorizontalAlignment="Left" Margin="10,306,0,0" VerticalAlignment="Top"/>
        <TextBox Name="MaxTextBox" HorizontalAlignment="Left" Height="23" Margin="123,309,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="LotNumberBlock" HorizontalAlignment="Left" Margin="123,341,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="100"/>
        <TextBox Name="QuantityLabelTextBox" HorizontalAlignment="Left" Height="23" Margin="123,371,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="33"/>
    </Grid>
</Page>
